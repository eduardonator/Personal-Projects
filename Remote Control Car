/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_5|GPIO_PIN_12, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_1|GPIO_PIN_15, GPIO_PIN_RESET);

  /*Configure GPIO pin : B1_Pin */
  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pins : PA5 PA12 */
  GPIO_InitStruct.Pin = GPIO_PIN_5|GPIO_PIN_12;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pins : PB1 PB15 */
  GPIO_InitStruct.Pin = GPIO_PIN_1|GPIO_PIN_15;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  /*Configure GPIO pin : PA11 */
  GPIO_InitStruct.Pin = GPIO_PIN_11;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_RISING_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pin : PC10 */
  GPIO_InitStruct.Pin = GPIO_PIN_10;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_RISING_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOC, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI15_10_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(EXTI15_10_IRQn);

}

/* USER CODE BEGIN 4 */
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin){

	if(GPIO_Pin == GPIO_PIN_10){
		//interrupt 1 function
		ticker1++;
   		 if((ticker1 % 2) != 0){
    			  timeStamp1 =  clock();
   			 }
   		 else{
      		 timeStamp2 =  clock();
    			}
 	

  	 if(ticker1 == 1){
       		 period1 = 30;
      		}
     	else if((ticker1 % 2) != 0){
                   
		period1 =((double)(timeStamp1 - timeStamp2  ))/ CLOCKS_PER_SEC;


      		period1 = period1 * 1000;
		 checkVelocity1 = true;
   		 }
   	 else{
     		 period1 = ((double)(timeStamp2 - timeStamp1))/ CLOCKS_PER_SEC;
     		 period1 = period1 * 1000;
		  checkVelocity1 = true;
   		 } 
	
	}
	else{
		// interrupt 2 function

		   ticker2++;
		    if((ticker2 % 2) != 0){
		      timeStamp3 =  clock();
		    }
		    else{
		       timeStamp4 =  clock();
		    }
		  

		   if(ticker2 == 1){
			period2 = 30;
		      }
		    else if((ticker2 % 2) != 0){

		period2 =((double)(timeStamp3 - timeStamp4  ))/ CLOCKS_PER_SEC;


		      period2 = period2 * 1000;  
		      checkVelocity2 = true;
		    }
		    else{

		period2 =((double)(timeStamp4 - timeStamp3  ))/ CLOCKS_PER_SEC;


		      period2 = period2 * 1000;  
		      checkVelocity2 = true;
		    } 
	}
}
/* USER CODE END 4 */

